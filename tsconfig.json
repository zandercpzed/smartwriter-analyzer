{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictFunctionTypes": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"@/*": ["src/*"],
			"@analyzers/*": ["src/analyzers/*"],
			"@personas/*": ["src/personas/*"],
			"@llm/*": ["src/llm/*"],
			"@types/*": ["src/types/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
